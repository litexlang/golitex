have fn:
    line(a, b R) fn(R)R:
        forall x R:
            line(a, b)(x) = a * x + b

    prove:
        have fn f(x R) R = a * x + b

    = f

exist_prop a, b R st is_line(f fn(R)R):
    forall x R:
        f(x) = a * x + b
        f(x) = line(a, b)(x)

# 点斜式
have fn:
    line_point_slope(k R, pt cart(R, R)) fn(R)R:
        forall x R:
            line_point_slope(k, pt)(x) = k * (x - pt[1]) + pt[2]

    prove:
        have fn f(x R) R = k * (x - pt[1]) + pt[2]

    = f

# 斜率
have fn:
    slope(f fn(R)R, a, b R) R:
        dom:
            forall x R:
                f(x) = a * x + b
        =>:
            slope(f, a, b) = a

    prove:
        do_nothing
    = a

# 截距
have fn:
    intercept(f fn(R)R, a, b R) R:
        dom:
            forall x R:
                f(x) = a * x + b
        =>:
            intercept(f, a, b) = b

    prove:
        do_nothing
    = b

# 两点式
have fn:
    line_two_points(pt1 cart(R, R), pt2 cart(R, R)) fn(R)R:
        pt1[1] != pt2[1]
        forall x R:
            line_two_points(pt1, pt2)(x) = (x - pt1[1]) / (pt2[1] - pt1[1]) * (pt2[2] - pt1[2]) + pt1[2]

    prove:
        pt1[1] - pt2[1] != 0
        have fn f(x R) R = (x - pt1[1]) / (pt2[1] - pt1[1]) * (pt2[2] - pt1[2]) + pt1[2]

    = f