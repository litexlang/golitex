prop Cauchy_condition(a fn(N_pos)R, M N_pos, epsilon R_pos):
    forall x, y N_pos:
        x > M
        y > M
        =>:
            abs(a(x) - a(y)) < epsilon

prop R_seq_converges(a fn(N_pos)R):
    forall epsilon R_pos:
        =>:
            exist M N_pos: $Cauchy_condition(a, M, epsilon)

have fn f(x N_pos) R = 1 / x

prove forall epsilon R_pos => exist M N_pos: $Cauchy_condition(f, M, epsilon):
    have a Q st a $in {t Q: 0 < t, t < epsilon}
    have p Z, q N_pos st a = p / q

    # 需要添加 a < b <= c 则 a < c
    # 添加： p $in R， p >= 1时， 如果 x >= 0 那么 x <= p * x
    1 / q <= p / q
    a < epsilon
    p / q < epsilon
    1 / q < epsilon

    have M N_pos = M = 2 * q
    forall x N_pos:
        x > M
        =>:
            f(x) = 1 / x
            1 / x < 1 / M
            1 / M = 1 / (2 * q)
            1 / x < 1 / (2 * q)
            f(x) < 1 / (2 * q)

    forall x, y N_pos:
        x > M
        y > M
        =>:
            abs(f(x) - f(y)) < abs(f(x)) + abs(f(y))
            abs(f(x)) < 1 / (2 * q)
            abs(f(y)) < 1 / (2 * q)
            abs(f(x)) + abs(f(y)) < 1 / 2 * q + 1 / 2 * q
            abs(f(x) - f(y)) < 1 / 2 * q + 1 / 2 * q
            abs(f(x) - f(y)) < 1 / q
            abs(f(x) - f(y)) < epsilon